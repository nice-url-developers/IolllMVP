<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.personal.v.LoginActivity">

    <!--<View-->
    <!--android:id="@+id/systemBar"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="-2mm"-->

    <!--android:layout_marginStart="0mm"-->
    <!--android:background="@color/transparent"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent" />-->

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100mm"
        android:layout_height="100mm"
        android:layout_marginBottom="8mm"
        android:layout_marginStart="162mm"
        android:layout_marginTop="308mm"
        android:src="@drawable/svg_user_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16mm"
        android:text="Welcome,"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/textBigPrimary"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16mm"
        android:text="Sign In to continue"
        android:textSize="@dimen/textBigInfo"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <android.support.v7.widget.AppCompatEditText
        android:text="admin"
        android:id="@+id/userNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32mm"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <android.support.v7.widget.AppCompatEditText
        android:text="admin1"
        android:id="@+id/passWordEdit"
        android:inputType="textPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16mm"
        app:layout_constraintStart_toStartOf="@+id/userNameEdit"
        app:layout_constraintTop_toBottomOf="@+id/userNameEdit" />

    <android.support.design.button.MaterialButton
        android:textAppearance="?android:attr/textAppearanceLargeInverse"
        android:id="@+id/submitBtn"
        app:cornerRadius="5mm"
        app:backgroundTint="@color/colorTextPrimary2"
        android:background="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16mm"
        android:textSize="@dimen/textBigInfo"
        android:padding="10mm"
        android:text="Sign In"
        app:layout_constraintStart_toStartOf="@+id/passWordEdit"
        app:layout_constraintTop_toBottomOf="@+id/passWordEdit" />

</android.support.constraint.ConstraintLayout>